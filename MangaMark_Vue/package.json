{
  "name": "mangamark",
  "version": "2.0.0",
  "title": "MangaMark-Extension",
  "author": "Quyen Truong",
  "description": "Mark your manga as read",
  "displayName": "Manga Mark",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "vue",
    "vite",
    "create-chrome-ext"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build:chrome": "vite build && npx gulp chrome",
    "build:firefox": "vite build --mode=firefox && npx gulp firefox",
    "clean:firefox": "npx gulp firefox_clean",
    "preview": "vite preview",
    "release": "npx gulp release",
    "deleter": "npx gulp delete_release",
    "fmt": "prettier --write '**/*.{vue,js,json,css,scss,md}'"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "clipboard": "^2.0.11",
    "minimatch": "^9.0.3",
    "sweetalert2": "^11.9.0",
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.21",
    "@types/chrome": "^0.0.248",
    "@vitejs/plugin-vue": "^4.4.1",
    "execa": "^8.0.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-json-editor": "^2.5.7",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-shell": "^0.8.0",
    "prettier": "^3.0.3",
    "vite": "^4.5.0",
    "xmlbuilder": "^15.1.1"
  }
}